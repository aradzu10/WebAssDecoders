{    
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C++ Build Debug",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/MDd",
                "/W4", 
                "/EHsc",
                "/ZI",
                "/std:c++17",
                "/Od",
                "/Fe:\"${workspaceFolder}/Debug/${fileBasenameNoExtension}.exe\"",
                "/Fd:\"${workspaceFolder}/Debug/\"",
                "/Fo:\"${workspaceFolder}/Debug/\"",
                "\"${file}\"", "\"${fileDirname}\"/**.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "C++ Build Release",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/MD",
                "/W4",
                "/EHsc",
                "/std:c++17",
                "/O2",
                "/Fe:\"${workspaceFolder}/Release/${fileBasenameNoExtension}.exe\"",
                "/Fd:\"${workspaceFolder}/Release/\"",
                "/Fo:\"${workspaceFolder}/Release/\"",
                "\"${file}\"", "\"${fileDirname}\"/**.cpp"
            ]
        }
    ]
}